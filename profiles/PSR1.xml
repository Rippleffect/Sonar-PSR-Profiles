<profile>
    <name>PSR1</name>
    <language>php</language>
    <rules>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>PSR1.Classes.ClassDeclaration.MultipleClasses</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>PSR1.Classes.ClassDeclaration.MissingNamespace</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>PSR1.Files.SideEffects.FoundWithSymbols</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.Files.ByteOrderMark.Found</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.NamingConventions.CamelCapsFunctionName.MethodDoubleUnderscore</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.NamingConventions.CamelCapsFunctionName.ScopeNotCamelCaps</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.NamingConventions.CamelCapsFunctionName.NotCamelCaps</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.NamingConventions.CamelCapsFunctionName.FunctionDoubleUnderscore</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.NamingConventions.UpperCaseConstantName.ClassConstantNotUpperCase</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.NamingConventions.UpperCaseConstantName.ConstantNotUpperCase</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.PHP.DisallowShortOpenTag.EchoFound</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Generic.PHP.DisallowShortOpenTag.Found</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Squiz.Classes.ValidClassName.MissingBrace</key>
            <priority>MAJOR</priority>
        </rule>
        <rule>
            <repositoryKey>php_codesniffer_rules</repositoryKey>
            <key>Squiz.Classes.ValidClassName.NotCamelCaps</key>
            <priority>MAJOR</priority>
        </rule>
    </rules>
</profile>